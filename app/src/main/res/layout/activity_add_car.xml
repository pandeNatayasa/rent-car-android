<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.addcar.AddCarActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_car"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@color/colorDivider"/>
    <TextView
        android:id="@+id/tv_select_image"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Pilih Gambar"
        android:textColor="@color/colorPrimary"/>
    <EditText
        android:id="@+id/et_car_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Mobil"
        android:inputType="text"
        android:background="@drawable/et_semi_round"
        android:padding="10dp"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/et_car_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Sewa"
        android:inputType="number"
        android:background="@drawable/et_semi_round"
        android:padding="10dp"
        android:layout_margin="10dp"/>
    <EditText
        android:id="@+id/et_car_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Deskripsi"
        android:background="@drawable/et_semi_round"
        android:padding="10dp"
        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_primary"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:text="Simpan"/>
</LinearLayout>